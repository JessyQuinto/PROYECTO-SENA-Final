#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Change to Frontend directory
cd Frontend

# Run linting
echo "ğŸ” Linting code..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues."
  exit 1
fi

# Check formatting
echo "ğŸ’… Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Run 'npm run format' to fix them."
  exit 1
fi

# Run type checking
echo "ğŸ” Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix the issues."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix them."
  exit 1
fi

