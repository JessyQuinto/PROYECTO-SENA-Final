#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Change to Frontend directory
cd Frontend

# Check for TypeScript errors
echo "ğŸ“ Type checking..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Run linting
echo "ğŸ” Linting code..."
npx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0
if [ $? -ne 0 ]; then
  echo "âŒ Linting errors found. Please fix them before committing."
  exit 1
fi

# Check code formatting
echo "âœ¨ Checking code formatting..."
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Running formatter..."
  npx prettier --write .
  echo "âœ… Code formatted. Please stage the changes and commit again."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npx vitest run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"