#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --audit-level moderate
if [ $? -ne 0 ]; then
  echo "âš ï¸ Security vulnerabilities found. Please review and fix them."
  echo "Run 'npm audit fix' to automatically fix issues."
  # Don't exit here as it's a warning, not a hard failure
fi

# Build the project to ensure it compiles
echo "ğŸ—ï¸ Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix build errors before pushing."
  exit 1
fi

# Run full test suite with coverage
echo "ğŸ§ª Running full test suite..."
npm run test:coverage
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix them before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"