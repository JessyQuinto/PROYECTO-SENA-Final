{
  "info": {
    "_postman_id": "093f7081-97fd-4efd-a406-8bb2cfea1d5d",
    "name": "Tesoros Chocó - Comprador Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "🔐 Auth Comprador",
      "item": [
        {
          "name": "POST Supabase Auth Comprador",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const j = pm.response.json();",
                  "  pm.test('Auth successful', () => !!j.access_token);",
                  "  pm.collectionVariables.set('comprador_auth_token', j.access_token || '');",
                  "  pm.collectionVariables.set('comprador_user_id', j.user?.id || '');",
                  "  console.log('✅ Comprador authenticated with Supabase');",
                  "} else {",
                  "  pm.test('Auth failed', () => false);",
                  "  console.log('❌ Auth error:', pm.response.text());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"{{comprador_email}}\",\"password\":\"{{comprador_password}}\"}"
            },
            "url": {
              "raw": "{{supabase_rest_url}}/auth/v1/token?grant_type=password",
              "host": [
                "{{supabase_rest_url}}"
              ],
              "path": [
                "auth",
                "v1",
                "token"
              ],
              "query": [
                {
                  "key": "grant_type",
                  "value": "password"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "🛒 Pedidos Comprador",
      "item": [
        {
          "name": "POST /rpc/crear_pedido (Comprador)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (!pm.collectionVariables.get('comprador_auth_token')) {",
                  "  pm.test('Skip - no auth token', () => true);",
                  "  return;",
                  "}",
                  "if (pm.response.code === 200) {",
                  "  const j = pm.response.json();",
                  "  pm.collectionVariables.set('order_id', j.order_id || '');",
                  "  pm.test('Order created', () => !!j.order_id);",
                  "  console.log('✅ Order created by comprador:', j.order_id);",
                  "} else {",
                  "  pm.test('Order failed', () => false);",
                  "  console.log('❌ Order error:', pm.response.text());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{comprador_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"items\":[{\"producto_id\":\"{{demo_producto_id}}\",\"cantidad\":1}]}"
            },
            "url": {
              "raw": "{{backend_base_url}}/rpc/crear_pedido",
              "host": [
                "{{backend_base_url}}"
              ],
              "path": [
                "rpc",
                "crear_pedido"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "📦 Estados Comprador",
      "item": [
        {
          "name": "POST /orders/:id/delivered (Comprador)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (!pm.collectionVariables.get('order_id')) {",
                  "  pm.test('Skip - no order', () => true);",
                  "  return;",
                  "}",
                  "pm.test('Status 200', () => pm.response.code === 200);",
                  "console.log('✅ Order delivered status updated by comprador');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{comprador_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{backend_base_url}}/orders/{{order_id}}/delivered",
              "host": [
                "{{backend_base_url}}"
              ],
              "path": [
                "orders",
                "{{order_id}}",
                "delivered"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
